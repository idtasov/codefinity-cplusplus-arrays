#include <iostream>

// Function declaration
int sumMainDiagonal(const int arr[][3], int size)
{
    int sum={};
    for(int n=0;n<size;n++)
        for(int j =0;j<size;j++)
            {
                if (n==j)
                    sum+=(arr[n][j]);
            }
    std::cout<<sum<<std::endl;
    return sum;
}

int main()
{
    int matrix[3][3] = {
        {1, 2, 3},
        {4, 5, 6},
        {7, 8, 9}
    };
    int result = sumMainDiagonal(matrix, 3);
    std::cout << "Sum of main diagonal: " << result << std::endl;
    return 0;
}