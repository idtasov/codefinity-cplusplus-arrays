#include <iostream>

void fillPowersOfTwo(int arr[], int size)
{
    int value = 1;
    for (int i = 0; i<size; i++)
        {
            arr[i]=value;
            value *=2;
        }
}

int main()
{
    const int SIZE = 8;
    int arr[SIZE];
    fillPowersOfTwo(arr, SIZE);
    for (int i = 0; i < SIZE; ++i) {
        std::cout << arr[i] << " ";
    }
    std::cout << std::endl;
    return 0;
}